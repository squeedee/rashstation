[alias]
  ci = commit --verbose
  br = branch
  co = checkout
  di = diff
  st = status
  su = submodule update --init --recursive
  lw = log --decorate=short --graph --color-words -w --find-renames=50%
  flog = log --pretty=fuller --decorate
  lg = log --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)an>%Creset'
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  blog = log origin/master... --left-right
  ctags = !.\"git/hooks/ctags\"

[diff]
  wordRegex = [^=.,()[:space:]\"]+

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto

[grep]
  lineNumber = true
  default = simple

[push]
  recurseSubmodules=check

[url "git@github.com:"]
  pushInsteadOf = https://github.com/

[apply]
    whitespace = nowarn

[core]
  pager = less -FXRS -x2
  excludesfile = ~/.gitignore

[format]
    pretty = format:%h %C(yellow)%ci%Creset %Cgreen%an%Creset | %s
